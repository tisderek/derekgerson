/*******************************
         Site Overrides
*******************************/

.ui.container#profile h1, h2, h3 {
  color: #FFFFFF;
}

/* Name */
.ui.container#profile h1 {
  font-family: 'Text Me One', sans-serif;
  font-weight: 300;
  font-size: 5em;
  text-decoration: none;
}

/* Configs for title + city */
.ui.container#profile h2, .ui.container#profile h3 {   
  font-family: 'Roboto', sans-serif;
  margin:0;
  -webkit-margin-before: 0em;
  -webkit-margin-after: 0.5em;
  text-decoration: none;
  line-height: 1em;
}

/* Title */
.ui.container#profile h2 {
  font-size: 2.5em;
  font-weight: 300;
}

/* City */
.ui.container#profile h3 {
  font-size: 1.2em;
  font-weight: 100;
  -webkit-margin-after: 2em;
}

/* Email */
.ui.container#profile a {
  color: #B36653;
  font-size: 1.8em;
}

body {
  font-family: 'Roboto', sans-serif;
  font-weight: 300; 
  }

/* Header Section */
.ui.grid > #header-section.row {
  background-color: #E8846B;
  border: none;
  padding: 8em 0;
}

/* Right hand side text */
#tagline {
  font-family: 'Roboto', sans-serif;
  font-weight: 300;
  line-height: 2.5em;
  color: white;
  font-size: 2em;
}

.ui.button,{
  background-color: none;
  background: none;
  border: none;
  box-shadow:none;
  color: #B36653;
  font-size:1.5em;
}

.ui.button:hover {
  background-color: rgba(255,255,255, 0.2);
}