/*******************************
         Site Overrides
*******************************/


p, span, h1, h2, h3, h4, h5 {
  font-weight: 300;
  text-decoration: none;
}


#header-section,
#projects-section {
  padding-top: 8rem;
  padding-bottom: 8rem;
}

/* Header Section */
  /* Background color */
  .ui.grid > #header-section.row {
    background-color: #E8846B;
  }

  /* Name */
  .ui.segment#profile h1 {
    font-family: 'Text Me One', sans-serif;
    font-weight: 300;
    text-decoration: none;
    font-size: 4rem;
  }

  /* Title + City shared */
  .ui.segment#profile h2,
   .ui.segment#profile h3 {   
    margin:0;
    -webkit-margin-before: 0em;
    -webkit-margin-after: 0.5em;
    text-decoration: none;
    line-height: 1em;
  }

  /* Title */
  .ui.segment#profile h2 {
    font-weight: 400;
    font-size: 2rem;
  }

  /* City */
  .ui.segment#profile h3 {
    font-size: 1.5rem;
    font-weight: 100;
    -webkit-margin-after: 2em;
  }

  /* Email */
  .ui.segment#profile a {
    font-size: 1.5rem;
    color: #B36653;
  }

  /* Contact Buttons */
  .ui.button {
    background-color: none;
    background: none;
    border: none;
    box-shadow:none;
    color: #B36653;
  }

  .ui.button:hover {
    background-color: rgba(255,255,255, 0.2);
  }

  /* Tagline */
  .ui.segment#tagline {
    font-size: 1.38rem;
    line-height: 2.5em;
    text-decoration: none;
  }
  

/* Projects Section */
  .ui.grid > #projects-section.row {
    background-color: #16528E;
  }

   #projects-section.row > h2 {
    font-weight: 300;
    text-decoration: none;
  }

/* About Section */  
  .ui.grid > #about-section.row {
    background-color: #A2C5BF;
  }