/*******************************
    User Variable Overrides
*******************************/
@width: 290px;
@background: @strongTransparentWhite;
@border: none;
@boxShadow: none;

@contentPadding: 2em 2em;

@rowSpacing: 1.5em;
@groupCardMargin: 2em @horizontalSpacing @rowSpacing;

@extraBackground: transparent;
@extraDivider: none;
@extraBoxShadow: none;
@extraPadding: .5em 2em;

@extraLinkColor: @darkTextColor;
@extraLinkHoverColor: @textColor;
@extraColor: @darkTextColor;

@headerFontSize: @relativeLarge;
@headerLinkColor: @textColor;
@headerLinkHoverColor: @linkHoverColor;
@headerColor: @offWhite;

@imageBorderRadius: @borderRadius;
@imageBorder: 1px solid @borderColor;

@linkHoverBackground: transparent;
@linkHoverBoxShadow: none;

@descriptionColor: @offWhite;